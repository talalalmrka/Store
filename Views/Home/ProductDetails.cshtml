@model Store.Models.Product
@{
    ViewData["Title"] = Model.Name;
}

<div class="container py-6">
    <!-- Breadcrumb -->
    <nav class="mb-6">
        <ol class="flex items-center space-x-2 text-sm text-gray-600">
            <li><a asp-controller="Home" asp-action="Index" class="hover:text-primary">الرئيسية</a></li>
            <li class="text-gray-400">/</li>
            <li><a asp-controller="Home" asp-action="Store" class="hover:text-primary">المنتجات</a></li>
            <li class="text-gray-400">/</li>
            <li class="text-gray-900 font-semibold">@Model.Name</li>
        </ol>
    </nav>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- صورة المنتج -->
        <div class="space-y-4">
            <div class="aspect-square rounded-2xl overflow-hidden bg-gray-100">
                <img src="@Url.Content(Model.ImageUrl)" alt="@Model.Name" 
                     class="w-full h-full object-cover object-center hover:scale-105 transition-transform duration-300" />
            </div>
            
            <!-- صور إضافية (يمكن إضافتها لاحقاً) -->
            <div class="grid grid-cols-4 gap-2">
                <div class="aspect-square rounded-lg overflow-hidden bg-gray-100 border-2 border-primary">
                    <img src="@Url.Content(Model.ImageUrl)" alt="@Model.Name" 
                         class="w-full h-full object-cover object-center" />
                </div>
                <!-- يمكن إضافة صور إضافية هنا -->
            </div>
        </div>

        <!-- تفاصيل المنتج -->
        <div class="space-y-6">
            <div>
                <h1 class="text-3xl font-bold text-gray-900 mb-2">@Model.Name</h1>
                <p class="text-2xl font-bold text-primary mb-4">@Model.Price ريال</p>
                <p class="text-gray-600 text-lg leading-relaxed">@Model.Description</p>
            </div>

            <!-- معلومات التصنيف -->
            @if (Model.Category != null)
            {
                <div class="flex items-center space-x-2">
                    <span class="text-gray-600">التصنيف:</span>
                    <a asp-controller="Home" asp-action="CategoryProducts" asp-route-categoryId="@Model.CategoryId"
                       class="bg-primary/10 text-primary px-3 py-1 rounded-full text-sm hover:bg-primary/20 transition-colors">
                        @Model.Category.Name
                    </a>
                </div>
            }

            <!-- أزرار الإجراءات -->
            <div class="space-y-4">
                <div class="flex items-center space-x-4">
                    <a asp-controller="Home" asp-action="AddToCart" asp-route-id="@Model.Id" 
                       class="btn btn-primary btn-lg flex-1 hover:scale-105 transition-transform duration-300"
                       onclick="showAddToCartMessage()">
                        <i class="fas fa-cart-plus mr-2"></i>
                        أضف إلى السلة
                    </a>
                    <button class="btn btn-outline-primary btn-lg hover:scale-105 transition-transform duration-300" onclick="toggleFavorite()">
                        <i class="far fa-heart" id="favoriteIcon"></i>
                    </button>
                </div>
                
                <div class="flex items-center space-x-4">
                    <a asp-controller="Home" asp-action="Store" class="btn btn-outline-secondary hover:scale-105 transition-transform duration-300">
                        <i class="fas fa-arrow-left mr-2"></i>
                        العودة للمنتجات
                    </a>
                    <button class="btn btn-outline-secondary hover:scale-105 transition-transform duration-300" onclick="shareProduct()">
                        <i class="fas fa-share-alt mr-2"></i>
                        مشاركة
                    </button>
                </div>
            </div>

            <!-- معلومات إضافية -->
            <div class="border-t pt-6">
                <h3 class="text-lg font-semibold mb-4">معلومات المنتج</h3>
                <div class="space-y-2 text-gray-600">
                    <div class="flex justify-between">
                        <span>معرف المنتج:</span>
                        <span class="font-semibold">#@Model.Id</span>
                    </div>
                    @if (Model.Category != null)
                    {
                        <div class="flex justify-between">
                            <span>التصنيف:</span>
                            <span class="font-semibold">@Model.Category.Name</span>
                        </div>
                    }
                    <div class="flex justify-between">
                        <span>السعر:</span>
                        <span class="font-semibold text-primary">@Model.Price ريال</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- منتجات ذات صلة -->
    <div class="mt-12">
        <h2 class="text-2xl font-bold mb-6">منتجات ذات صلة</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            @{
                var relatedProducts = Store.Helpers.StoreDataHelper.GetProductsByCategory(Model.CategoryId)
                    .Where(p => p.Id != Model.Id)
                    .Take(4)
                    .ToList();
            }
            @foreach (var product in relatedProducts)
            {
                <div class="card overflow-hidden hover:shadow-lg transition-shadow">
                    <div class="aspect-square relative overflow-hidden">
                        <img src="@Url.Content(product.ImageUrl)" alt="@product.Name" 
                             class="w-full h-full object-cover object-center" />
                    </div>
                    <div class="p-3">
                        <h6 class="mb-2 text-sm font-semibold line-clamp-2">@product.Name</h6>
                        <p class="text-primary font-bold mb-2">@product.Price ريال</p>
                        <a asp-controller="Home" asp-action="ProductDetails" asp-route-id="@product.Id"
                           class="btn btn-primary btn-sm w-full">
                            عرض التفاصيل
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script>
function toggleFavorite() {
    const icon = document.getElementById('favoriteIcon');
    if (icon.classList.contains('far')) {
        icon.classList.remove('far');
        icon.classList.add('fas');
        icon.style.color = '#ef4444';
        showMessage('تم إضافة المنتج للمفضلة', 'success');
    } else {
        icon.classList.remove('fas');
        icon.classList.add('far');
        icon.style.color = '';
        showMessage('تم إزالة المنتج من المفضلة', 'info');
    }
}

function shareProduct() {
    if (navigator.share) {
        navigator.share({
            title: '@Model.Name',
            text: '@Model.Description',
            url: window.location.href
        });
    } else {
        // Fallback for browsers that don't support Web Share API
        navigator.clipboard.writeText(window.location.href).then(() => {
            showMessage('تم نسخ رابط المنتج', 'success');
        });
    }
}

function showAddToCartMessage() {
    setTimeout(() => {
        showMessage('تم إضافة المنتج إلى السلة بنجاح!', 'success');
    }, 500);
}

function showMessage(message, type = 'info') {
    const messageDiv = document.createElement('div');
    messageDiv.className = `fixed top-4 right-4 z-50 px-6 py-3 rounded-lg shadow-lg transition-all duration-300 transform translate-x-full`;
    
    switch(type) {
        case 'success':
            messageDiv.className += ' bg-green-500 text-white';
            break;
        case 'error':
            messageDiv.className += ' bg-red-500 text-white';
            break;
        case 'warning':
            messageDiv.className += ' bg-yellow-500 text-black';
            break;
        default:
            messageDiv.className += ' bg-blue-500 text-white';
    }
    
    messageDiv.innerHTML = `
        <div class="flex items-center">
            <i class="fas fa-check-circle mr-2"></i>
            <span>${message}</span>
        </div>
    `;
    
    document.body.appendChild(messageDiv);
    
    // Show message
    setTimeout(() => {
        messageDiv.classList.remove('translate-x-full');
    }, 100);
    
    // Hide message after 3 seconds
    setTimeout(() => {
        messageDiv.classList.add('translate-x-full');
        setTimeout(() => {
            document.body.removeChild(messageDiv);
        }, 300);
    }, 3000);
}
</script>
