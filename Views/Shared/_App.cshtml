<!doctype html>
<html lang="ar" dir="rtl">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - متجر لمسة</title>
  <script type="importmap"></script>
  <link rel="icon" type="image/png" href="~/images/favicon/favicon-96x96.png" sizes="96x96" />
  <link rel="icon" type="image/svg+xml" href="~/images/favicon/favicon.svg" />
  <link rel="shortcut icon" href="~/images/favicon/favicon.ico" />
  <link rel="apple-touch-icon" sizes="180x180" href="~/images/favicon/apple-touch-icon.png" />
  <link rel="manifest" href="~/images/favicon/site.webmanifest" />
  @* <link rel="stylesheet" vite-href="~/app.css" asp-append-version="true" /> *@
  <link rel="stylesheet" href="~/dist/app.css" asp-append-version="true" />
</head>

<body>
  @RenderBody()
  <footer class="text-white overflow-hidden relative bg-gradient-to-br from-primary-800 to-primary-200">
    <div class="bg-body-bg dark:bg-body-bg-dark absolute start-1/2 -translate-x-1/2" style="
          width: 110%;
          height: 30px;
          border-bottom-left-radius: 50%;
          border-bottom-right-radius: 50%;
        "></div>
    <div class="pb-6 container" style="padding-top: calc(30px + 2rem)">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div class="col">
          <a title="FadgramUi" asp-controller="Home" asp-action="Index" class="navbar-brand">
            <img src="~/images/logo-light.svg" style="width: 35px" />
          </a>
          <p class="mt-4">عالم الاناقة والموضة والتخفيضات</p>
        </div>
        <div class="col">
          <h3 class="text-xl">الموقع</h3>
          <nav class="nav vertical" data-theme="dark">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">
              <i class="icon bi-house-fill"></i> <span>الرئيسية</span>
            </a>
            <a asp-area="" asp-controller="Home" asp-action="Store" class="nav-link">
              <i class="icon bi-newspaper"></i> <span>المنتجات</span>
            </a>

            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="nav-link">
              <i class="icon bi-shield-fill-check"></i>
              <span>Privacy policy</span>
            </a>
          </nav>
        </div>
        <div class="col">
          <div class="col">
            <h3 class="text-xl">حول</h3>
            <nav class="nav vertical" data-theme="dark">
              <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">
                <i class="icon bi-house-fill"></i> <span>من نحن</span>
              </a>
              <a asp-area="" asp-controller="Home" asp-action="Store" class="nav-link">
                <i class="icon bi-newspaper"></i> <span>اتصل بنا</span>
              </a>

              <a asp-area="" asp-controller="Home" asp-action="Privacy" class="nav-link">
                <i class="icon bi-shield-fill-check"></i>
                <span>سياسة الخصوصية</span>
              </a>
            </nav>
          </div>
        </div>
        <div class="col">
          <h3 class="text-xl">تابعنا</h3>
          <div class="flex items-center gap-2">
            <a class="btn-circle btn-circle-pinterest" title="Pinterest" href="#" target="_blank" rel="nofollow">
              <i class="icon bi-pinterest"> </i>
            </a>
            <a class="btn-circle btn-circle-telegram" title="Telegram" href="#" target="_blank" rel="nofollow">
              <i class="icon bi-telegram"> </i>
            </a>
            <a class="btn-circle btn-circle-whatsapp" title="Whatsapp" href="#" target="_blank" rel="nofollow">
              <i class="icon bi-whatsapp"> </i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </footer>
  <script type="module" src="~/dist/app.js"></script>

  @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
